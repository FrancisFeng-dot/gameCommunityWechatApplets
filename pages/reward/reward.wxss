@import '../../styles/animate.wxss';

page {
  height: 100%;
  background: #333;
}

.reward-container {
  box-sizing: border-box;
  padding: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.card {
  flex: 1;
  background: no-repeat url(https://ocrjl5j3c.qnssl.com/quick_youhui/images/kyh_redbag_bg.png);
  background-size: 100% 100%;
  color: #83492C;
  text-align: center;
}

.card-title {
  height: 96rpx;
  width: 380rpx;
  display: block;
  margin: 120rpx auto;
}

.card-operate {
  position: relative;
  margin-top: 40rpx;
}

.card-multiple {
  position: absolute;
  top: 120rpx;
  text-align: center;
  width: 100%;
  color: #DBB76C;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.card-multiple-number {
  font-size: 42px;
  line-height: 1em;
}

/* .card-multiple-text {
  font-size: 16px;
  line-height: 1em;
} */

.card-operate image {
  display: block;
  width: 240rpx;
  height: 240rpx;
  margin-left: auto;
  margin-right: auto;
}

.card-tip {
  font-size: 14px;
  margin-top: 30rpx;
}

.card-money {
  font-size: 48px;
}

.card-withdraw {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  text-decoration: underline;
}

.card-withdraw image{
  height: 48rpx;
  width: 48rpx; 
}

.share {
  margin-top: 30rpx;
}

.share-btn {
  background: linear-gradient(#D4595B, #A92D2E);
  color:#fff;
}

.share-btn-hover {
  background: linear-gradient(#A92D2E, #D4595B);
  color:#fff;
}

.share-icon {
  height: 45rpx;
  width: 42rpx;
  margin-right: 20rpx;
}

.received {
  position: fixed;
  z-index: 999;
  top: 28rpx;
  left: 20rpx;
  font-size: 14px;
}

.received-item {
  color: #fff;
  margin-top: 20rpx;
}

.received-item text {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.bag-flow .go-home{
  width: 140rpx;
  height:72rpx;
  background-color: rgba(255, 255, 255, 0.8);
  position: fixed;
  z-index: 5;
  top:92rpx;
  right:0rpx;
  color: #333;
  font-size: 24rpx;
  border-radius: 200rpx;
  border-top-right-radius:0px;
  border-bottom-right-radius:0px;
  padding-left:20rpx;
  display: flex;
  align-items: center;
}

.bag-flow .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.btn-none {
  background-color: transparent;
}

.btn-none::after {
  border: none;
}

.reward-end-icon {
  display: block;
  height: 314rpx;
  width: 188rpx;
  margin: 0 auto;
}

.reward-end-text {
  display: block;
  height: 56rpx;
  width: 500rpx;
  margin: 0 auto;
  margin-top: 80rpx;
}
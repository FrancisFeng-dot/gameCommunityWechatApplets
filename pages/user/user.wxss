.header {
  box-sizing: border-box;
  padding-top: 40rpx;
  width: 100%;
  height: 360rpx;
  background: url(https://ocrjl5j3c.qnssl.com/UserCenterBackground.png);
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: cover;
}

.avatar {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border-radius: 50%;
}

.nickname {
  text-align: center;
  margin-top: 10rpx;
  font-size: 24px;
  font-weight: bold;
  color: #ffffff;
}
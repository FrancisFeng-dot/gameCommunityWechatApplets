.title {
  margin-bottom: 1rpx;
  background-color: #ffffff;
  font-size: 14px;
  padding: 20rpx;
}
.block {
  margin-bottom: 2rpx;
  background-color: #ffffff;
  font-size: 14px;
  padding: 20rpx;
}

.block .block-item {
  margin-top: 10rpx;
  align-items: flex-start;
}

.block .point-nickname {
  font-size: 16px;
  line-height: 80rpx;
}
.block .point-time {
  color: #717171;
  margin-top: 10rpx;
}

.block .point-avatar {
  display: block;
  height: 160rpx;
  width: 160rpx;
}
.block .block-right {
  flex:1;
  justify-content: flex-end;
}
.right-point {
  line-height: 160rpx;
  text-align: right;
  float: right;
}
.block .block-image {
  width: 160rpx;
  margin-right: 20rpx;
}
.block .goods-price {
  text-decoration: line-through;
  line-height: 80rpx;
}
.fixed {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 5%;
}
.pay-btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
}
.btn-number {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 16rpx;
  color: #ffd600;
  border-radius: 2px 0 0 2px;
  border: 1px solid #ececec;
  font-size: 50rpx;
}
.ipt-number {
  width: 200rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #666;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  border: 1px solid #ececec;
  text-align: center;
  border-radius: 1px;
  border-right: none;
  border-left: none;
}
.adress-msg {
  font-size: 24rpx;
  line-height: 40rpx;
}
.adress-tel {
  font-size: 24rpx;
  line-height: 80rpx;
  float: right;
}
.point-show {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  border-bottom: 1rpx solid #cecece;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.point-all {
  flex:1;
  justify-content: flex-end;
  text-align: right;
}
@import '../../app.wxss';

.home-header {
  width: 100%;
  height: 300rpx;
  background-size: cover;
  background-position: 50%;
  background-repeat: no-repeat;
}

.home-header-container {
  width: 100%;
  height: 300rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #ffffff;
}

.home-header-search {
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.home-header-info {
  padding: 8rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.home-header-logo {
  box-sizing: border-box;
  display: block;
  width: 150rpx;
  height: 150rpx;
  border: 2px solid #ffffff;
  border-radius: 4px;
  box-shadow: 0 1px 2px rgba(0,0,0,.14);
}

.home-header-stats {
  font-size: 14px;
}

.home-header-button-wrapper {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.home-header-button {
  display: flex;
  align-items: center;
  height: 48rpx;
  border: 1px solid #fff;
  border-radius: 40rpx;
  font-size: 14px;
  color: #fff;
  background: none;
  margin-bottom: 10rpx;
  margin: 0;
  padding: 0 10rpx;
}

.icon-qr {
  width: 52rpx;
  height: 52rpx;
  margin-right: 30rpx;
  display: block;
}

.weui-search-bar__form {
  background-color:hsla(0,0%,100%,.8);
  border: none;
  height: 56rpx;
}

.search-input-wrapper {
  width: 100%;
  color: #333;
}

.weui-search-bar-label {
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  color: #9b9b9b;
}

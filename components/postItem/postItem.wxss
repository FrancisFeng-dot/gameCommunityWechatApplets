@import '../../app.wxss';

.post-container {
  padding: 30rpx 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.post-essence {
  background: #fff url(https://ocrjl5j3c.qnssl.com/h2CqWzJHxAK1517195144.jpg) no-repeat;
  background-position: 84% -9px;
  background-size: 50px 50px;
}

.post-header  {
  font-size: 18px;
}

.post-operate-wrapper {
  flex: 1;
  justify-content: flex-end;
}

.post-operate {
  width: 80rpx;
  height: 40rpx;
  justify-self: flex-end;
}

.header-avatar {
  height: 52rpx;
  width: 52rpx;
  border-radius: 50%;
}

/* 内容 */
.post-content {
  padding: 20rpx 0;
  font-size: 16px;
}

.content-text {
  font-size: 16px;
  display: block;
}

/* 视音频 */
.content-media {
  margin-top: 20rpx;
}

.content-media .content-video-mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.content-media .content-video-play {
  height: 60rpx;
  width: 60rpx;
}

.content-media .content-video-image-wrapper {
  position: relative;
}

.content-media .content-video {
  display: block;
  width: 100%;
  height: 450rpx;
  background-color: #000000;
}

.content-image-cover-wrapper {
  position: relative;
  box-sizing: border-box;
  border: 1px solid #f1f1f1;
  margin-top: 20rpx;
  height: 520rpx;
  overflow: hidden;
}

.content-image-cover-icon-wrapper {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.content-image-cover-icon {
  width: 40rpx;
  height: 40rpx;
}

.content-image-title-wrapper {
  position: absolute;
  box-sizing: border-box;
  padding: 40rpx 30rpx 20rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  color: #ffffff; 
  background-image: linear-gradient(180deg,transparent,rgba(0,0,0,.5)); 
}

.content-image-cover {
  width: 100%;
  height: 520rpx;
}

.content-image {
  box-sizing: border-box;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.content-image image {
  background-color: #f1f1f1;
}

.content-image-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content-image .image-m1 {
  width: 100%;
  height: 500rpx;
}

.content-image .image-m2 {
  width: 353rpx;
  height: 353rpx;
}

.content-image .image-m3 {
  width: 234rpx;
  height: 234rpx;
}

.content-image .image-m4-1 {
  width: 532rpx;
  height: 532rpx;
}

.content-image .image-m4-2 {
  width: 174rpx;
  height: 174rpx;
}

.content-image .image-m6-1 {
  width: 472rpx;
  height: 472rpx;
}

.content-image .image-m6-2 {
  width: 234rpx;
  height: 234rpx;
}

.content-image .image-m7 {
  width: 174rpx;
  height: 174rpx;
}

/* 评论 */
.post-comment {
  margin-top: 20rpx;
  font-size: 14px;
}

.post-comment-item {
  margin-bottom: 12rpx;
}

.post-comment-user {
  color: rgb(74, 122, 180);
}

.post-comment-more {
  margin-top: 24rpx;
  margin-bottom: 12rpx;
  color: rgb(164, 164, 164);
}

/* 操作 */
.post-behavior {
  margin-top: 20rpx;
  font-size: 14px;
  color: #A4A4A4;
  justify-content: space-between;
}

.post-behavior .post-behavior-item {
  line-height: 1em;
}

.post-behavior .post-behavior-box {
  position: relative;
  margin-right: 20rpx;
}

.post-behavior .post-behavior-icon {
  display: block;
  height: 42rpx;
  width: 42rpx;
}

.post-behavior .post-behavior-like {
  z-index: 99;
  position: absolute;
  top: 0;
  left: 42rpx;
  font-size: 10px;
  line-height: 1em;
}

.shrink {
  text-align: right;
  color: #3c689d;
  font-size: 14px;
}
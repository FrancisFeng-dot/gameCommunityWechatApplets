@import '../../app.wxss';

.comment-container {
  display: flex;
  align-items: flex-start;
  border-bottom: 1px solid #f1f1f1;
  padding: 30rpx;
}

.comment-container .comment-son {
  background-color: rgb(244, 244, 244);
  padding: 20rpx;
}

.comment-container .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
  margin-right: 20rpx;
}

.comment-container .name {
  color: rgb(74, 122, 180);
}

.comment-container .name-one {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width: 100rpx;
  display: inline-block;
  color: rgb(74, 122, 180);
}

.comment-container .time {
  font-size: 12px;
  color: #a4a4a4;
  margin-top: 10rpx;
}

.comment-container .floor {
  font-size: 12px;
  color: #a4a4a4;
}

.comment-image {
  width: 400rpx;
  height: 200rpx;
}

.scale08 {
  overflow: hidden;
}

.scale08 audio{
  transform: scale(0.8);
  transform-origin: 0 0;
}

.scale06 {
  transform: scale(0.6);
  transform-origin: 0 0;
}

.extend {
  width: 590rpx;
  overflow: hidden;
}